html 
    head
        title="servidos con PUG JS"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    body(class="bg-light")
        h1(class="text-center mb-3") Cargar producto
        form(class="container", action="/api/productos",enctype="form-data", method="POST")
            div(class="mb-3")
                input(type="text", class="form-control", name="nombre", id="nombre", placeholder="Nombre")
            div(class="mb-3")
                input(type="text", class="form-control", name="precio", id="precio", placeholder="Precio")
            div(class="mb-3")
                input(type="text", class="form-control", name="imagen", id="imagen", placeholder="URL Imagen")
            input(class="btn btn-primary submit", type="submit", value="Cargar Producto")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa",crossorigin="anonymous") 